# Net/HTTP Example Configuration
# Copy this file to .env and customize the values

# Basic API Information
BYTEDOCS_TITLE=Net/HTTP API Documentation
BYTEDOCS_VERSION=1.0.0
BYTEDOCS_DESCRIPTION=Auto-generated API documentation for Net/HTTP application with Laravel-style session auth
BYTEDOCS_BASE_URL=http://localhost:8080
BYTEDOCS_DOCS_PATH=/docs
BYTEDOCS_AUTO_DETECT=true

# Multiple Environment URLs
BYTEDOCS_PRODUCTION_URL=http://localhost:8080
BYTEDOCS_LOCAL_URL=http://localhost:8080

# Laravel-style Session Authentication
BYTEDOCS_AUTH_ENABLED=true
BYTEDOCS_AUTH_TYPE=session
BYTEDOCS_AUTH_PASSWORD=change-this-password

# Session Configuration
BYTEDOCS_AUTH_SESSION_EXPIRE=1440  # 24 hours in minutes
BYTEDOCS_AUTH_IP_BAN_ENABLED=true
BYTEDOCS_AUTH_IP_BAN_MAX_ATTEMPTS=5
BYTEDOCS_AUTH_IP_BAN_DURATION=60   # 60 minutes
BYTEDOCS_AUTH_ADMIN_WHITELIST_IPS=127.0.0.1,::1

# Alternative: Basic Authentication
# BYTEDOCS_AUTH_TYPE=basic
# BYTEDOCS_AUTH_USERNAME=admin
# BYTEDOCS_AUTH_PASSWORD=secret123
# BYTEDOCS_AUTH_REALM=ByteDocs API Documentation

# UI Configuration
BYTEDOCS_UI_THEME=auto
BYTEDOCS_UI_SHOW_TRY_IT=true
BYTEDOCS_UI_SHOW_SCHEMAS=true

# AI Configuration
BYTEDOCS_AI_ENABLED=true
BYTEDOCS_AI_PROVIDER=openrouter
BYTEDOCS_AI_API_KEY=your-api-key-here
BYTEDOCS_AI_CHAT_ENABLED=true
BYTEDOCS_AI_DOC_GEN_ENABLED=false
BYTEDOCS_AI_MODEL=openai/gpt-oss-20b:free
BYTEDOCS_AI_MAX_TOKENS=1000
BYTEDOCS_AI_MAX_COMPLETION_TOKENS=1000
BYTEDOCS_AI_TEMPERATURE=0.7

# App Information
APP_NAME=ByteDocs API
APP_URL=http://localhost:8080
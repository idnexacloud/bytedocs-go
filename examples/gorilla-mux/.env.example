# Social Media API Configuration Example
# Copy this file to .env and customize the values

# Basic API Information
BYTEDOCS_TITLE=Social Media API
BYTEDOCS_VERSION=1.2.0
BYTEDOCS_DESCRIPTION=Comprehensive social media platform API with posts, comments, users, and social features
BYTEDOCS_BASE_URL=http://localhost:8070
BYTEDOCS_DOCS_PATH=/docs
BYTEDOCS_AUTO_DETECT=true

# Multiple Environment URLs
BYTEDOCS_PRODUCTION_URL=https://api.socialmedia.com
BYTEDOCS_STAGING_URL=https://staging-api.socialmedia.com
BYTEDOCS_LOCAL_URL=http://localhost:8070

# Paths to exclude from documentation
BYTEDOCS_EXCLUDE_PATHS=_ignition,debug,metrics,internal

# Authentication Configuration
BYTEDOCS_AUTH_ENABLED=true
BYTEDOCS_AUTH_TYPE=api_key
# For API key auth:
BYTEDOCS_AUTH_API_KEY=your-api-key
BYTEDOCS_AUTH_API_KEY_HEADER=X-API-Key
# For basic auth:
# BYTEDOCS_AUTH_USERNAME=admin
# BYTEDOCS_AUTH_PASSWORD=your-admin-password
# For bearer token auth:
# BYTEDOCS_AUTH_TYPE=bearer
# BYTEDOCS_AUTH_API_KEY=your-bearer-token
BYTEDOCS_AUTH_REALM=Social Media API

# UI Configuration
BYTEDOCS_UI_THEME=auto
BYTEDOCS_UI_SHOW_TRY_IT=true
BYTEDOCS_UI_SHOW_SCHEMAS=true
BYTEDOCS_UI_CUSTOM_CSS=
BYTEDOCS_UI_CUSTOM_JS=
BYTEDOCS_UI_FAVICON=
BYTEDOCS_UI_TITLE=Social Media API Documentation
BYTEDOCS_UI_SUBTITLE=Complete social media platform API

# AI Configuration
BYTEDOCS_AI_ENABLED=true
BYTEDOCS_AI_PROVIDER=openai
BYTEDOCS_AI_API_KEY=your-openai-api-key
BYTEDOCS_AI_CHAT_ENABLED=true
BYTEDOCS_AI_DOC_GEN_ENABLED=false
BYTEDOCS_AI_MODEL=gpt-4o-mini
BYTEDOCS_AI_MAX_TOKENS=1200
BYTEDOCS_AI_MAX_COMPLETION_TOKENS=1200
BYTEDOCS_AI_TEMPERATURE=0.7

# App Information
APP_NAME=Social Media API
APP_URL=http://localhost:8070